<!DOCTYPE html>
<html>
<head>
<h1>Please Create New Customer</h1>
</head>
<body>
<%= form_for (@customer) do |f| %>


	<%= f.label :custABN %><br/> 
    <%= f.text_field :custABN %><br/> 
    <%= f.label :first_name %><br/> 
    <%= f.text_field :first_name %><br/>
    <%= f.label :last_name %><br/> 
    <%= f.text_field :last_name %><br/>
    <%= f.label :email %><br/> 
    <%= f.email_field :email %><br/>
    <%= f.label :address %><br/> 
    <%= f.text_area :address %><br/>
    <%= f.label :phone %><br/> 
    <%= f.text_field :phone %><br/>
    <%= f.label :pincode %><br/> 
    <%= f.text_field :pincode %><br/>
    <%= f.label :password %><br/> 
    <%= f.password_field :password %><br/>
    <%= f.label :confirmation %><br/> 
    <%= f.password_field :confirmation %><br/>

  </div> 

  <div class="actions">
    <%= f.submit "Create" %><br/> 
  </div> 
  <% end %>
</body>
</html>